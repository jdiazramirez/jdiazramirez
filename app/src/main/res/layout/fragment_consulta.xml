<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="Fecha"
        android:textColor="@color/colorNegro"
        android:textSize="15sp"
        android:fontFamily="@font/raleway_mdium"/>
    <EditText
        android:id="@+id/edt_fecha"
        android:layout_below="@+id/txt_fecha"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_gris"
        android:drawableLeft="@drawable/calendario"
        android:drawablePadding="0dp"
        android:ems="10"
        android:editable="false"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:textColor="@color/colorNegro"
        android:textColorHint="@color/colorNegro"
        android:textSize="16dp" />
        <TextView
            android:id="@+id/txt_cbx_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cbx_estado"
            android:layout_marginTop="5dp"
            android:text="Estado"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:fontFamily="@font/raleway_mdium"/>
        <Spinner
            android:id="@+id/cbx_estado"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_fecha"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:layout_alignTop="@id/edt_fecha"
            android:layout_toEndOf="@id/edt_fecha"
            android:background="@drawable/edt_gris"
            android:ems="10"
            android:editable="false"
            android:clickable="true"
            android:padding="5dp"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorNegro"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/txt_cbx_busqueda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/edt_fecha"
            android:layout_below="@id/edt_fecha"
            android:layout_marginTop="5dp"
            android:text="BÃºsqueda"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:fontFamily="@font/raleway_mdium"/>
        <Spinner
            android:id="@+id/cbx_busqueda"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_cbx_busqueda"
            android:layout_alignLeft="@id/edt_fecha"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@id/cbx_estado"
            android:background="@drawable/edt_gris"
            android:ems="10"
            android:editable="false"
            android:clickable="true"
            android:padding="5dp"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorNegro"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_toStartOf="@id/btn_limpiar"
            android:layout_below="@id/cbx_busqueda"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_azul"
            android:drawableLeft="@drawable/buscar"
            android:fontFamily="@font/raleway_extrabold"
            android:onClick="onClick"
            android:padding="10dp"
            android:text="BUSCAR"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />
    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/btn_buscar"
        android:background="@drawable/btn_gris"
        android:fontFamily="@font/raleway_extrabold"
        android:onClick="onClick"
        android:text="LIMPIAR"
        android:textColor="#fff"
        android:textSize="12sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lista_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_limpiar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"></ListView>
        <ProgressBar
            android:id="@+id/progressBar1"
            android:visibility="invisible"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>